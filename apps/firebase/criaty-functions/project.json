{
  "name": "firebase-criaty-functions",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/firebase/criaty-functions/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/firebase/criaty-functions",
        "main": "apps/firebase/criaty-functions/src/main.ts",
        "tsConfig": "apps/firebase/criaty-functions/tsconfig.app.json",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/firebase/criaty/environment",
            "output": "."
          }
        ],
        "generatePackageJson": true,
        "platform": "node",
        "bundle": true,
        "thirdParty": false,
        "dependenciesFieldType": "dependencies",
        "target": "node16",
        "format": ["esm"],
        "esbuildOptions": {
          "logLevel": "info"
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/firebase/criaty-functions/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/firebase/criaty-functions/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx run firebase-criaty:deploy --only functions:firebase-criaty-functions"
      },
      "dependsOn": ["build"]
    }
  },
  "tags": [
    "firebase:function",
    "firebase:name:firebase-criaty-functions",
    "firebase:dep:firebase-criaty"
  ]
}
