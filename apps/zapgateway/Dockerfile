# Run the container with `docker run -p 3000:3000 -t zapgateway`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system zapgateway && \
          adduser --system -G zapgateway zapgateway

COPY dist/apps/zapgateway zapgateway
RUN chown -R zapgateway:zapgateway .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix zapgateway --omit=dev -f install

CMD [ "node", "zapgateway" ]
