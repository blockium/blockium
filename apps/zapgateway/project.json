{
  "name": "zapgateway",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/zapgateway/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "outputPath": "dist/apps/zapgateway",
        "format": ["cjs"],
        "bundle": false,
        "main": "apps/zapgateway/src/main.ts",
        "tsConfig": "apps/zapgateway/tsconfig.app.json",
        "assets": [
          "apps/zapgateway/public/*",
          "apps/zapgateway/.env",
          "apps/zapgateway/fly.toml",
          "apps/zapgateway/Dockerfile"
        ],
        "generatePackageJson": true,
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        }
      },
      "configurations": {
        "development": {},
        "production": {
          "generateLockfile": true,
          "esbuildOptions": {
            "sourcemap": false,
            "outExtension": {
              ".js": ".js"
            }
          }
        }
      }
    },
    "serve": {
      "executor": "@nrwl/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "zapgateway:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "zapgateway:build:development"
        },
        "production": {
          "buildTarget": "zapgateway:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/zapgateway/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/zapgateway/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "docker-build": {
      "dependsOn": ["build"],
      "command": "docker build -f apps/zapgateway/Dockerfile dist/apps/zapgateway -t zapgateway"
    }
  },
  "tags": []
}
