{
  "compileOnSave": false,
  "compilerOptions": {
    // Basic options
    "noEmit": true,
    "module": "esnext",
    "target": "es2017",
    "jsx": "react-jsx",
    // Optimization options
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "importHelpers": true,
    // Linting Options
    "strict": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    // Module Resolution Options
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    //
    "paths": {
      "@blockium/appbase": ["libs/appbase/src/index.ts"],
      "@blockium/calendar": ["libs/calendar/src/index.ts"],
      "@blockium/chart": ["libs/chart/src/index.ts"],
      "@blockium/chat": ["libs/chat/src/index.ts"],
      "@blockium/firebase": ["libs/firebase/src/index.ts"],
      "@blockium/form": ["libs/form/src/index.ts"],
      "@blockium/i18n": ["libs/i18n/src/index.ts"],
      "@blockium/layout": ["libs/layout/src/index.ts"],
      "@blockium/table": ["libs/table/src/index.ts"],
      "@blockium/theme": ["libs/theme/src/index.ts"],
      "@blockium/ui": ["libs/ui/src/index.ts"],
      "@blockium/utils": ["libs/utils/src/index.ts"],
      "@criaty/model": ["libsapp/criaty-model/src/index.ts"],
      "@criaty/model-types": ["libsapp/criaty-model-types/src/index.ts"],
      "@criaty/ui": ["libsapp/criaty-ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
